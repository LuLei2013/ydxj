/* pages/main/main.wxss */
/* 头部区域 样式 */
.swiper-img {
  width : 100% ;
  height : 150px;
}

/* 内容区域 主菜单 样式 */
.menu{
  padding: 6px;
}
.menu-tr{
  justify-content: center;
  display: flex;
  flex-direction:row;
}
.menu-td{
  padding: 8px;
  background-color: #f7f7f7;
  margin: 10px;
  display: flex;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content:center;
  align-items:center;
}

.menu-td-left{
  flex-direction:column;
  display: inline-flex;
  padding: 10px;
}

.menu-td-left-title{
text-align: left;
font-size:14px;
}

.menu-td-left-subtitle{
  margin-top: 2px;
text-align:left;
font-size:10px;
color: #ccc
}

.menu-td-right{
padding: 4px;
width: 50px;
height: 50px;
}

/* 内容区域 辅菜单 样式 */
.item{
  padding:4px;
}
.item-tr{
  padding: 4px;
  display: flex;
  width: 100%;
  align-items:center;
  justify-content:space-around;
}

.item-td{
  display: flex;
  flex-direction:column;
  align-items:center;
}

.item-td-top{
  border-radius:20px;
  margin: 4px;
  width: 45px;
  height: 45px;
}

.item-td-bottom{
  margin: 4px;
  font-size: 10px;
  color: #18213E;
}
/* 底部区域 样式 */